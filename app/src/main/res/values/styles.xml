<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--チュートリアル-->
    <style name="TutorialTitleTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">@dimen/tutorial_title_padding</item>
        <item name="android:paddingBottom">@dimen/tutorial_title_padding</item>
    </style>

    <style name="TutorialReadTheme">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:paddingTop">@dimen/tutorial_read_text_padding</item>
        <item name="android:paddingBottom">@dimen/tutorial_read_text_padding</item>
    </style>

    <style name="TutorialTextTheme">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:paddingTop">@dimen/tutorial_text_padding</item>
        <item name="android:paddingBottom">@dimen/tutorial_text_padding</item>
    </style>

    <style name="TutorialDetailTextTheme">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">@dimen/tutorial_detail_text_padding</item>
        <item name="android:paddingBottom">@dimen/tutorial_detail_text_padding</item>
    </style>

</resources>
